@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Trung tâm đăng kiểm xe</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <style>
        /* ===== Swap Left/Right mượt (không chữ ngược) ===== */
        .login-wrapper {
            position: relative;
            overflow: hidden; /* quan trọng: swap không lòi ra ngoài */
        }

        .login-left,
        .login-right {
            transition: transform .75s cubic-bezier(.2,.8,.2,1), box-shadow .75s ease;
            will-change: transform;
        }

        /* swap */
        .login-wrapper.swap .login-left {
            transform: translateX(100%);
        }

        .login-wrapper.swap .login-right {
            transform: translateX(-100%);
        }

        /* điểm nhấn nhẹ */
        .login-wrapper.swap .login-right {
            box-shadow: 0 16px 40px rgba(0,0,0,.10);
        }

        /* ===== 2 form overlay trong login-right (không bị xếp dọc) ===== */
        .login-right {
            position: relative;
            display: grid;
            align-content: center;
        }

        .auth-view {
            grid-area: 1 / 1;
            width: 100%;
            opacity: 0;
            transform: translateY(10px);
            pointer-events: none;
            transition: opacity .25s ease, transform .25s ease;
        }

            .auth-view.active {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
            }

        /* mobile: không swap */
        @@media (max-width: 991.98px) {
            .login-wrapper.swap .login-left, .login-wrapper.swap .login-right

        {
            transform: none;
        }

        }
    </style>
</head>


<body>
    <div class="bg-animation">
        <div class="bg-shape"></div>
        <div class="bg-shape"></div>
        <div class="bg-shape"></div>
    </div>

    <div class="container">
        <div class="login-wrapper" id="loginWrapper">
            <div class="login-left">
                <div class="logo-section">
                    <div class="logo-icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" />
                        </svg>
                    </div>
                    <h1>TRUNG TÂM ĐĂNG KIỂM XE</h1>
                    <p>Hệ thống quản lý đăng kiểm an toàn và chuyên nghiệp</p>
                </div>
            </div>

            <div class="login-right">
                <!-- VIEW: LOGIN -->
                <div class="auth-view active" id="loginView">
                    <div class="login-header">
                        <h2>Đăng nhập</h2>
                        <p>Chào mừng bạn quay trở lại!</p>
                    </div>

                    <div class="error-message" id="errorMessage">
                        @TempData["ErrorMessage"]
                    </div>

                    <form id="loginForm" method="post" asp-action="Login" asp-controller="Account">
                        <div class="form-group">
                            <label for="username">Tên đăng nhập</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Nhập tên đăng nhập" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Nhập mật khẩu" required>
                            </div>
                        </div>

                        <div class="remember-forgot">
                            <div class="checkbox-wrapper">
                                <input type="checkbox" id="remember" name="remember">
                                <label for="remember">Ghi nhớ đăng nhập</label>
                            </div>

                            <a href="#" class="forgot-link" id="showForgotPassword">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn-login">Đăng nhập</button>
                    </form>
                </div>

                <!-- VIEW: FORGOT PASSWORD (Email + CCCD) -->
                <div class="auth-view" id="forgotView">
                    <div class="login-header">
                        <h2>Quên mật khẩu</h2>
                        <p>Nhập Email và CCCD để nhận mã khôi phục</p>
                    </div>

                    <div class="error-message" id="forgotErrorMessage"></div>

                    <form id="forgotPasswordForm" method="post" asp-action="ForgotPassword" asp-controller="Account">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Nhập địa chỉ email" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="cccd">CCCD</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M16 21H8a2 2 0 01-2-2V5a2 2 0 012-2h6l4 4v12a2 2 0 01-2 2zM14 3v4h4" />
                                </svg>
                                <input type="text" class="form-control" id="cccd" name="cccd"
                                       placeholder="Nhập số CCCD" inputmode="numeric" required>
                            </div>
                        </div>

                        <button type="submit" class="btn-login">Gửi mã khôi phục</button>

                        <a href="#" class="forgot-link" id="backToLogin" style="display:inline-flex;margin-top:14px;">
                            ← Quay lại đăng nhập
                        </a>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script>
        const wrapper = document.getElementById('loginWrapper');
        const showForgot = document.getElementById('showForgotPassword');
        const backToLogin = document.getElementById('backToLogin');

        const loginView = document.getElementById('loginView');
        const forgotView = document.getElementById('forgotView');

        // chuyển sang quên mật khẩu + swap panel
        showForgot.addEventListener('click', function (e) {
            e.preventDefault();
            wrapper.classList.add('swap');

            // đổi form hơi trễ để nhìn mượt
            setTimeout(() => {
                loginView.classList.remove('active');
                forgotView.classList.add('active');
            }, 180);
        });

        // quay lại login + swap lại
        backToLogin.addEventListener('click', function (e) {
            e.preventDefault();
            wrapper.classList.remove('swap');

            setTimeout(() => {
                forgotView.classList.remove('active');
                loginView.classList.add('active');
            }, 180);
        });

        // Show error message if exists from server (?error=empty/invalid)
        window.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search);
            const errorType = urlParams.get('error');

            if (errorType) {
                const errorMsg = document.getElementById('errorMessage');
                if (errorType === 'empty') errorMsg.textContent = 'Vui lòng nhập đầy đủ thông tin!';
                else if (errorType === 'invalid') errorMsg.textContent = 'Tên đăng nhập hoặc mật khẩu không chính xác!';

                errorMsg.classList.add('show');
                setTimeout(() => errorMsg.classList.remove('show'), 5000);
            }
        });
    </script>
</body>
</html>
