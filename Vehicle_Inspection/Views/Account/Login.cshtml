@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Trung tâm đăng kiểm xe</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/images/icon.ico")" />
    <style>
        .login-wrapper {
            position: relative;
            overflow: hidden;
        }

        .login-left, .login-right {
            transition: transform .75s cubic-bezier(.2,.8,.2,1), box-shadow .75s ease;
            will-change: transform;
        }

        .login-wrapper.swap .login-left {
            transform: translateX(100%);
        }

        .login-wrapper.swap .login-right {
            transform: translateX(-100%);
            box-shadow: 0 16px 40px rgba(0,0,0,.10);
        }

        .login-right {
            position: relative;
            display: grid;
            align-content: center;
        }

        .auth-view {
            grid-area: 1 / 1;
            width: 100%;
            opacity: 0;
            transform: translateY(10px);
            pointer-events: none;
            transition: opacity .25s ease, transform .25s ease;
        }

            .auth-view.active {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
            }

        .success-message {
            background: linear-gradient(135deg, #34a853 0%, #0f9d58 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 10px;
        }

            .success-message.show {
                display: flex;
                animation: slideDown 0.5s ease;
            }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .otp-timer {
            color: #ea4335;
            font-weight: 600;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .attempt-count {
            color: #fbbc04;
            font-size: 13px;
            text-align: center;
            margin-top: 5px;
        }

        @@media (max-width: 991.98px) {
            .login-wrapper.swap .login-left, .login-wrapper.swap .login-right

        {
            transform: none;
        }

        }
    </style>
</head>

<body>
    <div class="bg-animation">
        <div class="bg-shape"></div>
        <div class="bg-shape"></div>
        <div class="bg-shape"></div>
    </div>

    <div class="container">
        <div class="login-wrapper" id="loginWrapper">
            <div class="login-left">
                <div class="logo-section">
                    <div class="logo-icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" />
                        </svg>
                    </div>
                    <h1>TRUNG TÂM ĐĂNG KIỂM XE</h1>
                    <p>Hệ thống quản lý đăng kiểm an toàn và chuyên nghiệp</p>
                </div>
            </div>

            <div class="login-right">
                <!-- VIEW 1: LOGIN -->
                <div class="auth-view active" id="loginView">
                    <div class="login-header">
                        <h2>Đăng nhập</h2>
                        <p>Chào mừng bạn quay trở lại!</p>
                    </div>

                    <div class="error-message" id="errorMessage">@TempData["ErrorMessage"]</div>

                    <form id="loginForm" method="post" asp-action="Login" asp-controller="Account">
                        <div class="form-group">
                            <label for="username">Tên đăng nhập</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Nhập tên đăng nhập" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required>
                            </div>
                        </div>

                        <div class="remember-forgot">
                            <div class="checkbox-wrapper">
                                <input type="checkbox" id="remember" name="remember">
                                <label for="remember">Ghi nhớ đăng nhập</label>
                            </div>
                            <a href="#" class="forgot-link" id="showForgotPassword">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn-login">Đăng nhập</button>
                    </form>
                </div>

                <!-- VIEW 2: REQUEST OTP (Email + CCCD) -->
                <div class="auth-view" id="forgotView">
                    <div class="login-header">
                        <h2>Quên mật khẩu</h2>
                        <p>Nhập Email và CCCD để nhận mã OTP</p>
                    </div>

                    <div class="error-message" id="forgotErrorMessage"></div>

                    <form id="forgotPasswordForm">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <input type="email" class="form-control" id="forgotEmail" name="email" placeholder="Nhập địa chỉ email" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="cccd">CCCD</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 21H8a2 2 0 01-2-2V5a2 2 0 012-2h6l4 4v12a2 2 0 01-2 2zM14 3v4h4" />
                                </svg>
                                <input type="text" class="form-control" id="forgotCccd" name="cccd" placeholder="Nhập số CCCD" inputmode="numeric" required>
                            </div>
                        </div>

                        <button type="submit" class="btn-login">Gửi mã OTP</button>

                        <a href="#" class="forgot-link" id="backToLogin" style="display:inline-flex;margin-top:14px;">
                            ← Quay lại đăng nhập
                        </a>
                    </form>
                </div>

                <!-- VIEW 3: RESET PASSWORD (OTP + New Password) -->
                <div class="auth-view" id="resetView">
                    <div class="login-header">
                        <h2>Đặt lại mật khẩu</h2>
                        <p>Nhập mã OTP và mật khẩu mới</p>
                    </div>

                    <div class="success-message" id="successMessage">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Mã OTP đã được gửi đến email của bạn!</span>
                    </div>

                    <div class="error-message" id="resetErrorMessage"></div>

                    <form id="resetPasswordForm">
                        <input type="hidden" id="resetEmail" name="email">

                        <div class="form-group">
                            <label for="otp">Mã OTP</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                                </svg>
                                <input type="text" class="form-control" id="otp" name="otp" placeholder="Nhập mã OTP 6 số" maxlength="6" inputmode="numeric" required>
                            </div>
                            <div class="otp-timer" id="otpTimer"></div>
                            <div class="attempt-count" id="attemptCount"></div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword">Mật khẩu mới</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Nhập mật khẩu mới" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Xác nhận mật khẩu</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Nhập lại mật khẩu mới" required>
                            </div>
                        </div>

                        <button type="submit" class="btn-login">Đặt lại mật khẩu</button>

                        <a href="#" class="forgot-link" id="backToLoginFromReset" style="display:inline-flex;margin-top:14px;">
                            ← Quay lại đăng nhập
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const wrapper = document.getElementById('loginWrapper');
        const loginView = document.getElementById('loginView');
        const forgotView = document.getElementById('forgotView');
        const resetView = document.getElementById('resetView');

        let attemptCount = 0;
        let timerInterval;

        // Switch to forgot password view
        document.getElementById('showForgotPassword').addEventListener('click', function (e) {
            e.preventDefault();
            switchView(forgotView);
        });

        // Back to login from forgot
        document.getElementById('backToLogin').addEventListener('click', function (e) {
            e.preventDefault();
            switchView(loginView, false);
        });

        // Back to login from reset
        document.getElementById('backToLoginFromReset').addEventListener('click', function (e) {
            e.preventDefault();
            clearTimer();
            switchView(loginView, false);
        });

        function switchView(targetView, swap = true) {
            if (swap) {
                wrapper.classList.add('swap');
            } else {
                wrapper.classList.remove('swap');
            }

            setTimeout(() => {
                loginView.classList.remove('active');
                forgotView.classList.remove('active');
                resetView.classList.remove('active');
                targetView.classList.add('active');
            }, 180);
        }

        // Handle forgot password form (send OTP)
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const email = document.getElementById('forgotEmail').value;
            const cccd = document.getElementById('forgotCccd').value;
            const errorMsg = document.getElementById('forgotErrorMessage');

            errorMsg.classList.remove('show');

            try {
                const response = await fetch('/Account/ForgotPassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `email=${encodeURIComponent(email)}&cccd=${encodeURIComponent(cccd)}`
                });

                const result = await response.json();

                if (result.success) {
                    // Store email for reset
                    document.getElementById('resetEmail').value = email;

                    // Show success and switch to reset view
                    document.getElementById('successMessage').classList.add('show');
                    attemptCount = 0;
                    updateAttemptCount();
                    startTimer();
                    switchView(resetView);
                } else {
                    errorMsg.textContent = result.message;
                    errorMsg.classList.add('show');
                }
            } catch (error) {
                errorMsg.textContent = 'Có lỗi xảy ra. Vui lòng thử lại!';
                errorMsg.classList.add('show');
            }
        });

        // Handle reset password form
        document.getElementById('resetPasswordForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const email = document.getElementById('resetEmail').value;
            const otp = document.getElementById('otp').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const errorMsg = document.getElementById('resetErrorMessage');

            errorMsg.classList.remove('show');

            if (newPassword !== confirmPassword) {
                errorMsg.textContent = 'Mật khẩu xác nhận không khớp!';
                errorMsg.classList.add('show');
                return;
            }

            if (newPassword.length < 6) {
                errorMsg.textContent = 'Mật khẩu phải có ít nhất 6 ký tự!';
                errorMsg.classList.add('show');
                return;
            }

            try {
                const response = await fetch('/Account/ResetPassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `email=${encodeURIComponent(email)}&otp=${encodeURIComponent(otp)}&newPassword=${encodeURIComponent(newPassword)}`
                });

                const result = await response.json();

                if (result.success) {
                    clearTimer();
                    alert('Đặt lại mật khẩu thành công! Vui lòng đăng nhập lại.');
                    switchView(loginView, false);
                } else {
                    attemptCount++;
                    updateAttemptCount();

                    if (attemptCount >= 5) {
                        errorMsg.textContent = 'Bạn đã nhập sai quá 5 lần. Vui lòng yêu cầu mã OTP mới!';
                        clearTimer();
                    } else {
                        errorMsg.textContent = result.message;
                    }
                    errorMsg.classList.add('show');
                }
            } catch (error) {
                errorMsg.textContent = 'Có lỗi xảy ra. Vui lòng thử lại!';
                errorMsg.classList.add('show');
            }
        });

        // Timer for OTP (10 minutes)
        function startTimer() {
            let timeLeft = 600; // 10 minutes in seconds
            const timerElement = document.getElementById('otpTimer');

            timerInterval = setInterval(() => {
                timeLeft--;
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;

                timerElement.textContent = `Mã OTP hết hạn sau: ${minutes}:${seconds.toString().padStart(2, '0')}`;

                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    timerElement.textContent = 'Mã OTP đã hết hạn!';
                }
            }, 1000);
        }

        function clearTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
            }
        }

        function updateAttemptCount() {
            const attemptElement = document.getElementById('attemptCount');
            attemptElement.textContent = `Số lần nhập còn lại: ${5 - attemptCount}/5`;
        }

        // Show error message from server
        window.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search);
            const errorType = urlParams.get('error');

            if (errorType) {
                const errorMsg = document.getElementById('errorMessage');
                if (errorType === 'empty') errorMsg.textContent = 'Vui lòng nhập đầy đủ thông tin!';
                else if (errorType === 'invalid') errorMsg.textContent = 'Tên đăng nhập hoặc mật khẩu không chính xác!';

                errorMsg.classList.add('show');
                setTimeout(() => errorMsg.classList.remove('show'), 5000);
            }
        });
    </script>
</body>
</html>