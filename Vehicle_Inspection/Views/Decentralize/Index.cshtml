    string searchVal = q["search"];
    string positionVal = q["position"];
    string teamVal = q["team"];
    string genderVal = q["gender"];
    string isActiveVal = q["isActive"];
}


@section Styles{
    <link rel="stylesheet" href="~/css/decentralize/main.css"/>
}

