@model Vehicle_Inspection.Models.User

@{
    ViewData["Title"] = "Điều chỉnh nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var provinces = (List<Vehicle_Inspection.Models.ProvinceDto>)ViewBag.Provinces;
    var provincesJson = System.Text.Json.JsonSerializer.Serialize(provinces);
    // JSON encode để tránh lỗi tiếng Việt / dấu nháy
    var currentProvinceJson = System.Text.Json.JsonSerializer.Serialize(Model.Province ?? "");
    var currentWardJson = System.Text.Json.JsonSerializer.Serialize(Model.Ward ?? "");
}

@section Styles {
    <link rel="stylesheet" href="~/css/employee/edit.css" />
}

<h2 class="text-center text-primary">THÔNG TIN CÁ NHÂN</h2>

<form asp-action="Edit" asp-route-id="@Model.UserId" method="post" enctype="multipart/form-data" class="p-4 border rounded bg-light form-em-edit">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="IsActive" />
    <input type="hidden" asp-for="CreatedAt" />

    <div class="form-group">
        <label asp-for="FullName" class="font-weight-bold"></label>
        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="font-weight-bold"></label>
        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold"></label>
        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate" class="font-weight-bold">Ngày sinh</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CCCD" class="font-weight-bold"></label>
        <input asp-for="CCCD" class="form-control" placeholder="Nhập CCCD" />
        <span asp-validation-for="CCCD" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="font-weight-bold">Số nhà / Đường</label>
        <input asp-for="Address" class="form-control" placeholder="Ví dụ: 12 Nguyễn Trãi, P. ..." />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="font-weight-bold">Tỉnh / Thành phố</label>
        <select asp-for="Province" class="form-control" id="provinceSelect">
            <option value="">Chọn tỉnh/thành</option>
            @foreach (var p in provinces)
            {
                <option value="@p.tentinhmoi">@p.tentinhmoi</option>
            }
        </select>
        <span asp-validation-for="Province" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="font-weight-bold">Phường / Xã</label>
        <select asp-for="Ward" class="form-control" id="wardSelect">
            <option value="">Chọn phường/xã</option>
        </select>
        <span asp-validation-for="Ward" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Gender" class="font-weight-bold">Giới tính</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Chọn giới tính</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionId" class="font-weight-bold">Chức vụ</label>
        <select asp-for="PositionId" class="form-control" id="positionSelect">
            <option value="">Chọn chức vụ</option>
            @foreach (var position in (List<Vehicle_Inspection.Models.Position>)ViewBag.Positions)
            {
                <option value="@position.PositionId" selected="@(Model.PositionId == position.PositionId)">
                    @position.PositionName</option>
            }
        </select>
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId" class="font-weight-bold">Đội nhóm</label>
        <select asp-for="TeamId"
                class="form-control"
                id="teamSelect">
            <option value="">Chọn đội nhóm</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Level" class="font-weight-bold">Cấp bậc</label>
        <input asp-for="Level" class="form-control" placeholder="Nhập cấp bậc" />
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="font-weight-bold">Ảnh đại diện</label>
        <input type="file" name="ProfilePicture" class="form-control-file" onchange="previewImage(event)" />
        <div class="image-preview mt-3">
            <img id="profileImagePreview" src="#" alt="Profile Preview" class="img-thumbnail"
                style="width: 120px; height: 160px; display: none;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Account.Username" class="font-weight-bold">Tên đăng nhập</label>
        <input asp-for="Account.Username" class="form-control" placeholder="Nhập tên đăng nhập" />
        <span asp-validation-for="Account.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.PasswordHash" class="font-weight-bold">Mật khẩu</label>
        <div class="input-group">
            <input asp-for="Account.PasswordHash" type="password" class="form-control" placeholder="Nhập mật khẩu"
                id="passwordField" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary"
                    onclick="togglePasswordVisibility()">Hiện</button>
            </div>
        </div>
        <span asp-validation-for="Account.PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block"><i class="fa-regular fa-floppy-disk" style="color: #ffffff;"></i> Lưu thay đổi</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility() {
            const passwordField = document.getElementById('passwordField');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
            } else {
                passwordField.type = 'password';
            }
        }

        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('profileImagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>

    <script>
        const provinces = @Html.Raw(provincesJson);
        const currentProvince = @Html.Raw(currentProvinceJson);
        const currentWard = @Html.Raw(currentWardJson);

        const provinceSelect = document.getElementById('provinceSelect');
        const wardSelect = document.getElementById('wardSelect');

        const norm = (s) => (s ?? "").toString().trim();

        function renderWards(provinceName, selectedWard) {
            wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

            const pName = norm(provinceName);
            if (!pName) return;

            const p = provinces.find(x => norm(x.tentinhmoi) === pName);
            if (!p || !p.phuongxa) return;

            const sw = norm(selectedWard);

            p.phuongxa.forEach(w => {
                const wn = norm(w.tenphuongxa);
                const opt = document.createElement('option');
                opt.value = wn;
                opt.textContent = wn;

                if (sw && wn === sw) opt.selected = true;

                wardSelect.appendChild(opt);
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            // 1) Set tỉnh từ dữ liệu đã parse
            if (currentProvince) {
                provinceSelect.value = currentProvince;
            }

            // 2) Đổ phường theo tỉnh đang selected và chọn đúng phường
            renderWards(provinceSelect.value, currentWard);
        });

        provinceSelect.addEventListener('change', function () {
            // Khi đổi tỉnh, đổ lại phường và reset lựa chọn
            renderWards(this.value, null);
        });


        const currentPositionId = '@Model.PositionId';
        const currentTeamId = '@Model.TeamId';

        function loadTeams(positionId, selectedTeamId = null) {
            const teamSelect = $('#teamSelect');
            teamSelect.empty();
            teamSelect.append('<option value="">Chọn đội nhóm</option>');

            if (!positionId) return;

            $.get('/Employee/GetTeamsByPosition', { positionId })
                .done(function (teams) {
                    teams.forEach(t => {
                        const selected = selectedTeamId == t.teamId ? 'selected' : '';
                        teamSelect.append(
                            `<option value="${t.teamId}" ${selected}>${t.teamName}</option>`
                        );
                    });
                });
        }

        // Khi đổi Position
        $('#positionSelect').on('change', function () {
            loadTeams(this.value, null);
        });

        // Khi mở Edit
        $(document).ready(function () {
            if (currentPositionId) {
                loadTeams(currentPositionId, currentTeamId);
            }
        });
    </script>


}